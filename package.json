{
	"name": "xea-cli-electron-service",
	"version": "1.0.0",
	"subversion": "2020",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"eslint": "eslint --color . --ext '.ts,.tsx'",
		"exe": "cross-env NODE_ENV=development electron .",
		"start": "npm-run-all -p views serve exe",
		"kill": "taskkill /f /t /im electron-template.exe",
		"views": "xea-cli-view-service serve",
		"views:build": "xea-cli-view-service build",
		"serve": "xea-cli-node-service serve",
		"serve:build": "xea-cli-node-service build",
		"electron": "electron-builder --win --x64",
		"build": "npm run views:build && npm run serve:build && npm run electron"
	},
	"dependencies": {
		"@types/moment": "^2.13.0",
		"@types/react": "^16.9.17",
		"@types/react-router-dom": "^5.1.3",
		"antd": "^3.26.7",
		"axios": "^0.19.1",
		"fs-extra": "^8.1.0",
		"history": "^4.10.1",
		"koa": "^2.11.0",
		"koa-bodyparser": "^4.2.1",
		"koa-compress": "^3.0.0",
		"koa-favicon": "^2.0.1",
		"koa-router": "^7.4.0",
		"koa-static": "^5.0.0",
		"mobx": "^5.15.2",
		"mobx-react": "^6.1.5",
		"mobx-react-devtools": "^6.1.1",
		"mobx-react-router": "^4.1.0",
		"moment": "^2.24.0",
		"mousetrap": "^1.6.3",
		"nedb": "^1.8.0",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react-loadable": "^5.5.0",
		"react-router": "^5.1.2",
		"react-router-dom": "^5.1.2",
		"socket.io": "^2.3.0",
		"socket.io-client": "^2.3.0"
	},
	"devDependencies": {
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@types/koa": "^2.11.0",
		"@types/koa-router": "^7.4.0",
		"@types/mousetrap": "^1.6.3",
		"@types/node": "^13.1.6",
		"@typescript-eslint/eslint-plugin": "^2.16.0",
		"@typescript-eslint/parser": "^2.16.0",
		"cross-env": "^6.0.3",
		"cssnano": "^4.1.10",
		"cssnext": "^1.8.4",
		"electron": "6.1.2",
		"electron-builder": "^22.2.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.9.0",
		"eslint-config-standard": "^14.1.0",
		"eslint-config-standard-react": "^9.2.0",
		"eslint-plugin-import": "^2.20.0",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-node": "^11.0.0",
		"eslint-plugin-prettier": "^3.1.2",
		"eslint-plugin-react": "^7.18.0",
		"eslint-plugin-standard": "^4.0.1",
		"husky": "^4.0.10",
		"lint-staged": "^10.0.0",
		"npm-run-all": "^4.1.5",
		"postcss-comment": "^2.0.0",
		"postcss-flexbugs-fixes": "^4.1.0",
		"postcss-import": "^12.0.1",
		"precss": "^4.0.0",
		"prettier": "^1.19.1",
		"typescript": "^3.7.4",
		"xea-cli-node-service": "^1.0.2",
		"xea-cli-view-service": "^1.0.0"
	},
	"build": {
		"publish": [
			{
				"provider": "generic",
				"url": ""
			}
		],
		"asar": true,
		"appId": "com.xea.electron-service",
		"productName": "electron-template",
		"files": [
			"dist",
			"public",
			"core",
			"favicon.ico",
			"index.js",
			"xea.config.js"
		],
		"nodeGypRebuild": false,
		"extraFiles": [],
		"win": {
			"icon": "./favicon.ico",
			"requestedExecutionLevel": "asInvoker"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"perMachine": true,
			"language": 2052
		},
		"directories": {
			"output": "output"
		}
	},
	"engines": {
		"node": ">=8.0.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.(ts|tsx)": "eslint"
	}
}
